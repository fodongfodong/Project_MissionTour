<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <!--
    // 클릭 스타일 //
    -->
    <item android:state_pressed="true" ><shape>
        <!-- 배경 -->        <gradient android:startColor="#5529BBAB" android:endColor="#5529BBAB" android:angle="270" />
        <!-- 외각선 -->	    <stroke android:width="1px" android:color="#88919191"/>
        <!-- 외각모양 -->	<corners android:radius="0px"/>
        <!-- 내부여백 -->	<padding android:left="0px" android:right="0px" android:top="0px" android:bottom="0px" />
    </shape></item>
    <!--
    // 기본 스타일 //
    -->
    <item><shape>
        <!-- 배경 -->		<gradient android:startColor="#ffffff" android:endColor="#ffffff" android:angle="270" />
        <!-- 외각선 -->	    <stroke android:width="1px" android:color="#88919191"/>
        <!-- 외각모양 -->	<corners android:radius="0px"/>
        <!-- 내부여백 -->	<padding android:left="0px" android:right="0px" android:top="0px" android:bottom="0px" />
    </shape></item>
</selector>