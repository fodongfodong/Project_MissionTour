<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_color_popupdialog"
        >
        <!--
        android:background="@android:color/transparent"
        android:background="@drawable/background_color_popupdialog"
        -->

        <TextView
            android:id="@+id/xml_webbrowser_dialog_label"
            android:textColor="#eaeaea"
            android:textSize="14sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            />

        <Button
            android:id="@+id/xml_webbrowser_dialog_btn_close"
            android:background="@android:color/transparent"
            android:text="닫기"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:paddingTop="@dimen/activity_vertical_margin_half"
            android:paddingBottom="@dimen/activity_vertical_margin_half"
            android:paddingRight="@dimen/activity_horizontal_margin_half"
            android:paddingLeft="@dimen/activity_horizontal_margin_half"
            />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/xml_webbrowser_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>